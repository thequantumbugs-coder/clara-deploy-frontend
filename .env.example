# Groq API Configuration (get key from https://console.groq.com)
GROQ_API_KEY=

# Sarvam AI API Keys (get key from Sarvam AI)
SARVAM_API_KEY=
# STT language: unknown (auto-detect), en, hi, etc.
SARVAM_LANGUAGE_CODE=unknown

# Hardware Configuration
CAMERA_INDEX=0
MIC_DEVICE_INDEX=0

# Paths
FACES_DB_PATH=config/faces.dat
CHROMA_DB_PATH=./chroma_db
UI_CONFIG_PATH=config/ui_config.json
TEMP_DIR=./temp

# RAG Configuration (college knowledge retrieval). RAG_MODEL must match a current Groq model id (see https://console.groq.com/docs/models); 404 usually means wrong or deprecated model.
RAG_MAX_TOKENS=6000
RAG_MODEL=llama-3.1-8b-instant
CHROMA_COLLECTION_NAME=college_knowledge
COLLEGE_KNOWLEDGE_PATH=college_knowledge.txt
RAG_TOP_K=5

# State Machine Configuration
INACTIVITY_TIMEOUT=20.0

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Server Configuration
HOST=0.0.0.0
PORT=6969
FRONTEND_URL=http://localhost:5173
